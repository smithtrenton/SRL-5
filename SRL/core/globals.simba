(*
SRL_DisableNavBar
~~~~~~~~~~~~~~

.. code-block:: pascal

    Procedure SRL_DisableNavBar;

  Offsets the client by 50 pixels when logged in, 22 when not logged in. This is to ignore the navigation bar at the top.

.. note::

    by: Brandon.

Example:

.. code-block:: pascal

*)

Procedure SRL_DisableNavBar;
var
  W, H: Integer;
begin
  GetClientDimensions(W, H);
  If (FoundBar) then
  begin
    ImageSetClientArea(SRL_NAVBAR_INGAME_X, SRL_NAVBAR_INGAME_Y, W, H);  //H - Offset to remove black bar at the bottom.
    MouseSetClientArea(SRL_NAVBAR_INGAME_X, SRL_NAVBAR_INGAME_Y, W, H);
  end else
    begin
      ImageSetClientArea(SRL_NAVBAR_INGAME_X, SRL_NAVBAR_LOGIN_Y, W, H);
      MouseSetClientArea(SRL_NAVBAR_INGAME_X, SRL_NAVBAR_LOGIN_Y, W, H);
    end;
end;

